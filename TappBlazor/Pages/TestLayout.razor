@page "/dashboard"

@* Dashboard Layout *@
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-3 bg-dark text-white sidebar">
            <div class="p-4">
                <h4>Hi Samantha</h4>
                <p>Welcome back to the workspace, we missed You!</p>
                <input type="text" class="form-control mb-3" placeholder="Search for projects">
                <h5>Projects</h5>
                <div class="project-cards mt-3">
                    <div class="card bg-primary text-white mb-3">
                        <div class="card-body">
                            GH
                        </div>
                    </div>
                    <div class="card bg-success text-white mb-3">
                        <div class="card-body">
                            CP
                        </div>
                    </div>
                    <div class="card bg-info text-white mb-3">
                        <div class="card-body">
                            EC
                        </div>
                    </div>
                    <div class="card bg-warning text-white mb-3">
                        <div class="card-body">
                            TA
                        </div>
                    </div>
                    <div class="card bg-danger text-white mb-3">
                        <div class="card-body">
                            LP
                        </div>
                    </div>
                    <div class="card bg-secondary text-white mb-3">
                        <div class="card-body">
                            <i class="fas fa-plus"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Content -->
        <div class="col-md-9 col-lg-9 main-content">
            <div class="p-4">
                <h4>Cyber Punk</h4>
                <div class="avatar-group mb-3">
                    <img src="https://via.placeholder.com/40" class="rounded-circle" alt="Avatar">
